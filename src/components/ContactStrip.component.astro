---
import Icon from '@src/components/Icon.component.astro'
import { numberContact, mailContact } from '@src/consts/numberContact'

---
<div class="py-2 text-white bg-commerce-800">
    <div
      class="flex flex-wrap justify-between items-center mx-auto w-full max-w-[1600px] px-4 sm:px-6 md:px-8 lg:px-10 xl:px-12"
    >
      <div class="w-full flex flex-wrap px-2 md:px-4">

        <div class="flex-1 md:flex md:items-center hidden md:space-x-6">
          <div class="header-top-social">
            <ul class="mb-0 p-0 flex space-x-4">
              <li
                class="list-inline-item transition-all duration-300 ease-in-out flex text-sm items-center gap-2"
              >

                <a
                  href={`https://wa.me/51${numberContact}?text=Hola, estoy interesado en sus servicios`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2"
                >
                  <Icon name="whatsapp" width={18} height={18} />
                  <span>+51 {numberContact}</span>
                </a>
              </li>
              <li
                class="list-inline-item transition-all duration-300 ease-in-out flex text-sm items-center gap-2"
              >

                <a
                  href={`mailto:${mailContact}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2"
                >
                  <Icon name="mail" width={18} height={18} />
                  <span>{mailContact}</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="flex-1 hidden md:flex justify-end items-center space-x-4">
          <div class="header-top-right-inner flex justify-end">
            <div class="header-top-lan-curr flex space-x-2 items-center">
              <ul class="mb-0 p-0 flex">
                <li
                  class="list-inline-item transition-all duration-300 ease-in-out text-sm flex gap-4"
                >
                  <Icon name="peru" width={18} height={18} />
                  <span>Lima / Perú</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <div class="w-full md:hidden flex justify-center py-2">
          <div class="text-sm text-center">
            <span class="block">Teléfono: +51 {numberContact}</span>
            <span class="block">Correo: {mailContact}</span>
            <span class="block">Ubicación: Lima / Perú</span>
          </div>
        </div>

      </div>
    </div>
  </div>
